<section id="loginform">
  <header class="title">
    <i class="icon-SnackVan"></i>
    Snacks in a Van
    {{error}}
  </header>
  <form method="post" action="/vendor/login" class="vendor-login-form">
    <label for="VanId"> Van ID</label>
    <input placeholder="vendor name" name='vendorName' id='vendorName' value="" required />

    <label for="Password"> Password</label>
    <input placeholder="*******" type="password" name='password' id='password' value="" required />

    <div class="vendor-forgot-password">
      <a href="/vendor/forgot-password"><u>Forgot password?</u></a>
    </div>

    <input type="submit" id="vendor-login-button" class="submit-button" value="Log in" />

  </form>


</section>